<div class="form-table-cell form-table-cell-head">{{ form_label(form.title, "witchcraftThemeTool.admin.Title"|trans([], "validators")) }}</div>
<div class="form-table-cell">{{ form_errors(form.title) }}{{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}</div>

<div class="form-table-cell form-table-cell-head">{{ form_label(form.photo, "witchcraftThemeTool.admin.Photo"|trans([], "validators")) }}</div>
<div class="form-table-cell">
	{% if entity.photo is not empty %}
		<b><u>{{ "admin.general.CurrentFile"|trans([], "validators") }}</u></b> {{ entity.photo }}
		<br>
	{% endif %}
	{{ form_errors(form.photo) }}
	{{ form_widget(form.photo, { 'attr': {'class': 'form-control'} }) }}
</div>

<div class="form-table-cell form-table-cell-head">{{ form_label(form.language, "witchcraftThemeTool.admin.Language"|trans([], "validators")) }}</div>
<div class="form-table-cell">{{ form_errors(form.language) }}{{ form_widget(form.language, { 'attr': {'class': 'form-control'} }) }}</div>

<div class="form-table-cell form-table-cell-head">{{ form_label(form.internationalName, "witchcraftThemeTool.admin.InternationalName"|trans([], "validators")) }}</div>
