{% extends "admin/GenericAdmin/show.html.twig" %}

{% block h2_title %}{{ "admin.index.WitchcraftThemeTool"|trans([], "validators") }}{% endblock %}

{% block edit_admin_route %}{{ path('WitchcraftThemeTool_Admin_Edit', { 'id': entity.id }) }}{% endblock %}
{% block new_admin_route %}{{ path('WitchcraftThemeTool_Admin_New') }}{% endblock %}
{% block index_admin_route %}{{ path('WitchcraftThemeTool_Admin_Index') }}{% endblock %}
{% block delete_admin_route %}{{ path('WitchcraftThemeTool_Admin_Delete', { 'id': entity.id }) }}{% endblock %}

{% block tbody_admin_table %}
	<div class="form-table-cell form-table-cell-head">Id</div>
	<div class="form-table-cell">{{ entity.id }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "witchcraftThemeTool.admin.Title"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.title }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "witchcraftThemeTool.admin.Photo"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.photo|imgsize(250, entity.getAssetImagePath(), true, {"class": "mx-auto d-block img-fluid"})|raw }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "witchcraftThemeTool.admin.Language"|trans([], "validators") }}</div>
	<div class="form-table-cell"><img src="{{ asset(entity.language.getAssetImagePath()) }}{{ entity.language.logo }}" alt="" width="20" height="13" /></div>

	<div class="form-table-cell form-table-cell-head">{{ "witchcraftThemeTool.admin.InternationalName"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.internationalName }}</div>
{% endblock %}

{% block data_bottom %}
	{{ render(controller('App\\Controller\\AdminController::internationalizationSelectGeneric', {entity: entity, route: "WitchcraftThemeTool_Admin_Internationalization", "showRoute": "WitchcraftThemeTool_Admin_Show", "editRoute": "WitchcraftThemeTool_Admin_Edit"})) }}
{% endblock %}