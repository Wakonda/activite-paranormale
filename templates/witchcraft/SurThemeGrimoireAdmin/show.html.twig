{% extends "admin/GenericAdmin/show.html.twig" %}

{% block h2_title %}{{ "admin.index.MagicBookTheme"|trans([], "validators") }}{% endblock %}

{% block edit_admin_route %}{{ path('SurThemeGrimoire_Admin_Edit', { 'id': entity.id }) }}{% endblock %}
{% block new_admin_route %}{{ path('SurThemeGrimoire_Admin_New') }}{% endblock %}
{% block index_admin_route %}{{ path('SurThemeGrimoire_Admin_Index') }}{% endblock %}
{% block delete_admin_route %}{{ path('SurThemeGrimoire_Admin_Delete', { 'id': entity.id }) }}{% endblock %}

{% block tbody_admin_table %}
	<div class="form-table-cell form-table-cell-head">Id</div>
	<div class="form-table-cell">{{ entity.id }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "magicbooktheme.admin.Title"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.title }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "magicbooktheme.admin.Theme"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.theme }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "magicbooktheme.admin.Definition"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.text|raw }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "magicbooktheme.admin.InternationalName"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.internationalName }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "magicbooktheme.admin.Picture"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.photo|imgsize(550, entity.getAssetImagePath(), true, {"class": "mx-auto d-block img-fluid"})|raw }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "magicbooktheme.admin.Language"|trans([], "validators") }}</div>
	<div class="form-table-cell"><img src="{{ asset(entity.language.getAssetImagePath()) }}{{ entity.language.logo }}" alt="" width="20px" height="13px" /></div>

	<div class="form-table-cell form-table-cell-head">{{ "magicbooktheme.admin.WitchcraftMenu"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.menuGrimoire.title }}</div>
{% endblock %}

{% block data_bottom %}
	{{ render(controller('App\\Controller\\AdminController::internationalizationSelectGenericAction', {entity: entity, route: "SurThemeGrimoire_Admin_Internationalization", "showRoute": "SurThemeGrimoire_Admin_Show", "editRoute": "SurThemeGrimoire_Admin_Edit"})) }}
{% endblock %}