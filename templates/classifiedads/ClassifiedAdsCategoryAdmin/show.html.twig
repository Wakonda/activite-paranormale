{% extends "admin/GenericAdmin/show.html.twig" %}

{% block h2_title %}{{ "classifiedAdsCategory.admin.ClassifiedAdsCategory"|trans([], "validators") }}{% endblock %}

{% block edit_admin_route %}{{ path('ClassifiedAdsCategory_Admin_Edit', { 'id': entity.id }) }}{% endblock %}
{% block new_admin_route %}{{ path('ClassifiedAdsCategory_Admin_New') }}{% endblock %}
{% block index_admin_route %}{{ path('ClassifiedAdsCategory_Admin_Index') }}{% endblock %}
{% block delete_admin_route %}{{ path('ClassifiedAdsCategory_Admin_Delete', { 'id': entity.id }) }}{% endblock %}

{% block tbody_admin_table %}
	<div class="form-table-cell form-table-cell-head">Id</div>
	<div class="form-table-cell">{{ entity.id }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "classifiedAdsCategory.admin.Title"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.title }}</div>

	{% if entity.parentCategory is not empty %}
		<div class="form-table-cell form-table-cell-head">{{ "classifiedAdsCategory.admin.ParentCategory"|trans([], "validators") }}</div>
		<div class="form-table-cell">{{ entity.parentCategory.title }}</div>
	{% endif %}

	<div class="form-table-cell form-table-cell-head">{{ "classifiedAdsCategory.admin.Language"|trans([], "validators") }}</div>
	<div class="form-table-cell"><img src="{{ asset(entity.language.getAssetImagePath()) }}{{ entity.language.logo }}" alt="" width="20" height="13" /></div>
{% endblock %}