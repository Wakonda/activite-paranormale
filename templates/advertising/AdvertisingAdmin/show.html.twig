{% extends "admin/GenericAdmin/show.html.twig" %}

{% block h2_title %}{{ "admin.index.Advertising"|trans([], "validators") }}{% endblock %}

{% block edit_admin_route %}{{ path('Advertising_Admin_Edit', { 'id': entity.id }) }}{% endblock %}
{% block new_admin_route %}{{ path('Advertising_Admin_New') }}{% endblock %}
{% block index_admin_route %}{{ path('Advertising_Admin_Index') }}{% endblock %}
{% block delete_admin_route %}{{ path('Advertising_Admin_Delete', { 'id': entity.id }) }}{% endblock %}

{% block tbody_admin_table %}
	<div class="form-table-cell form-table-cell-head">Id</div>
	<div class="form-table-cell">{{ entity.id }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "advertising.admin.Title"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.title }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "advertising.admin.Text"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.text|raw }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "advertising.admin.Width"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.width }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "advertising.admin.Height"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.height }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "advertising.admin.Language"|trans([], "validators") }}</div>
	<div class="form-table-cell"><img src="{{ asset(entity.language.getAssetImagePath()) }}{{ entity.language.logo }}" alt="" width="20px" height="13px" /></div>
{% endblock %}