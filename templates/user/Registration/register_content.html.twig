<p class="image"><img class="image_wrapper mx-auto d-block img-fluid" src="{{ asset('extended/photo/') }}gothic-girl-crobeau-beautiful.png" width="550" alt="Black gothic girl"></p>
{% form_theme form 'index/CSS/form_div_layout.html.twig' %}

{{ form_start(form, {'attr': {'action': path('Registration_Register'), 'class': "registration_register", novalidate: 'novalidate'}}) }}
	<div class="form-table form-table-4cols form-table-collapse">
		<div class="form-table-cell form-table-cell-head">{{ form_label(form.username, "user.register.Pseudo"|trans([], "validators")) }}</div>
