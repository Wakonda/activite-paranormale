{% if entities is not empty %}
<h3>{{ "store.index.Store"|trans([], "validators") }}</h3>

<div id="carousel-store-index" class="carousel-pagination carousel slide" data-interval="false">
	<ol class="carousel-indicators carousel-indicators-numbers pagination">
	{% set i = 0 %}
	{% set j = 1 %}
	{% for entity in entities %}
		<li data-bs-target="#carousel-store-index" data-bs-slide-to="{{ i }}" {{ i == 0 ? 'class="active"' : '' }}>{{ j }}</li>
		{% set i = i + 1 %}
		{% set j = j + 1 %}
	{% endfor %}
	</ol> 

	<div class="carousel-inner">
		{% set i = 0 %}
		{% for entity in entities %}
			<div class="carousel-item {{ i == 0 ? 'active' : '' }}">
		       {% include "store/Store/_product.html.twig" with { entity: entity } %}
			</div>
			{% set i = i + 1 %}
		{% endfor %}
	</div>
</div>
{% endif %}