{% if entities is not empty %}
<script>
$(function() {
    $('#carousel-store-index').carousel({
        interval: false
    }).on('slide.bs.carousel', function (e) {
        var nextH = $(e.relatedTarget).height();
        $(this).find('.active.carousel-item').parent().animate({
            height: nextH
        }, 500);
    });
});
</script>

<h3>{{ "store.index.Store"|trans([], "validators") }}</h3>

<div id="carousel-store-index" class="carousel-pagination carousel slide" data-interval="false">
	<!-- Indicators -->
	<ol class="carousel-indicators carousel-indicators-numbers pagination">
	{% set i = 0 %}
	{% set j = 1 %}
	{% for entity in entities %}
		<li data-target="#carousel-store-index" data-slide-to="{{ i }}" {{ i == 0 ? 'class="active"' : '' }}>{{ j }}</li>
		{% set i = i + 1 %}
		{% set j = j + 1 %}
	{% endfor %}
	</ol>

	<!-- Wrapper for slides -->
	<div class="carousel-inner" role="listbox">
		{% set i = 0 %}
		{% for entity in entities %}
			<div class="carousel-item {{ i == 0 ? 'active' : '' }}">
		       {% include "store/Store/_product.html.twig" with { entity: entity } %}
			</div>
			{% set i = i + 1 %}
		{% endfor %}
	</div>
</div>
{% endif %}