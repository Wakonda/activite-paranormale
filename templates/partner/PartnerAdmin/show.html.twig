{% extends "admin/GenericAdmin/show.html.twig" %}

{% block h2_title %}{{ "admin.index.Partner"|trans([], "validators") }}{% endblock %}

{% block edit_admin_route %}{{ path('Partner_Admin_Edit', { 'id': entity.id }) }}{% endblock %}
{% block new_admin_route %}{{ path('Partner_Admin_New') }}{% endblock %}
{% block index_admin_route %}{{ path('Partner_Admin_Index') }}{% endblock %}
{% block delete_admin_route %}{{ path('Partner_Admin_Delete', { 'id': entity.id }) }}{% endblock %}

{% block tbody_admin_table %}
	<div class="form-table-cell form-table-cell-head">Id</div>
	<div class="form-table-cell">{{ entity.id }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "partner.admin.Title"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.title }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "partner.admin.Link"|trans([], "validators") }}</div>
	<div class="form-table-cell"><a href="{{ entity.link }}" alt="" >{{ entity.link }}</a></div>

	<div class="form-table-cell form-table-cell-head">{{ "partner.admin.Logo"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.photo|imgsize(550, 'extended/photo/partner/', true, {"class": "mx-auto d-block img-fluid"})|raw }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "partner.admin.Language"|trans([], "validators") }}</div>
	<div class="form-table-cell"><img src="{{ asset('extended/photo/language/') }}{{ entity.language.logo }}" alt="" width="20" height="13" /></div>

	<div class="form-table-cell form-table-cell-head">{{ "partner.admin.Active"|trans([], "validators") }}</div>
	<div class="form-table-cell">
		{% if entity.active %}
			<span class="text-success"><i class="fas fa-check" aria-hidden="true"></i></span>
		{% else %}
			<span class="text-danger"><i class="fas fa-times" aria-hidden="true"></i></span>
		{% endif %}
	</div>

	<div class="form-table-cell form-table-cell-head">{{ "partner.admin.DisplayPage"|trans([], "validators") }}</div>
	<div class="form-table-cell">
		{% if entity.displayPage %}
			<span class="text-success"><i class="fas fa-check" aria-hidden="true"></i></span>
		{% else %}
			<span class="text-danger"><i class="fas fa-times" aria-hidden="true"></i></span>
		{% endif %}
	</div>

	<div class="form-table-cell form-table-cell-head">{{ "partner.admin.Icon"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.icon }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "partner.admin.Color"|trans([], "validators") }}</div>
	<div class="form-table-cell"><span style="background-color:{{ entity.color }}; width: 50px; height: 20px; display: inline-block;" class="p-2 me-2"></span>{{ entity.color }}</div>
{% endblock %}