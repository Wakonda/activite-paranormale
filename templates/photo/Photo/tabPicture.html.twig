{% extends "content_layout.html.twig" %}

{% block title %}{{ "photo.index.Photo"|trans([], "validators") }} - {{ themeDisplay }}{% endblock %}
{% block h2_title %}<h2><span class="float-left"><img src="{{ asset('extended/photo/bat-icon.png') }}" width="30" class="mt-1" alt="Bat"/></span>{{ "photo.index.Photo"|trans([], "validators") }} - {{ themeDisplay }}</h2>{% endblock h2_title %}

{% block header_plus %}
	<script src="{{ asset('extended/js/DataTables/media/js/jquery.dataTables.js') }}"></script>
	<script src="{{ asset('extended/js/DataTables/media/js/dataTables.bootstrap4.min.js') }}"></script>
	<script src="{{ asset('extended/js/DataTables/extensions/Responsive/js/dataTables.responsive.min.js') }}"></script>
	<script src="{{ asset('extended/js/DataTables/extensions/Responsive/js/responsive.bootstrap4.min.js') }}"></script>
	<script>
		$(function ()
		{
			$('table.doc_datatables').dataTable( {
				"oLanguage": {
					"sUrl": "{{ asset('extended/js/DataTables/language/dataTables.'~app.request.locale~'.txt') }}"
				},
				"bFilter": true,
				"bInfo": true,
				"bSort": true,
				"bLengthChange": true,
				"sPaginationType": "full_numbers",
				"iDisplayLength": {{ total_line_display }},
				"bProcessing": true,
				"bServerSide": true,
				"responsive": {
					"details": {
						display: $.fn.dataTable.Responsive.display.childRowImmediate,
						type: 'none',
						target: ''
					}
				},
				"aaSorting": [[ 2, "desc" ]],
				"sAjaxSource": "{{ path('Photo_TabPictureDatatables', { 'themeId' : themeId }) }}"
			});
		});
	</script>
	<link rel="stylesheet" href="{{ asset('extended/js/DataTables/media/css/dataTables.bootstrap4.min.css') }}" type="text/css" media="screen" />
	<link rel="stylesheet" href="{{ asset('extended/js/DataTables/extensions/Responsive/css/responsive.bootstrap4.min.css') }}" type="text/css" media="screen" />
{% endblock %}

{% block APBlog_body %}
	<p class="image"><img class="image_wrapper mx-auto d-block img-fluid" src="{{ asset('extended/photo/photo-tab.jpg') }}" alt="Werewolf" width="550" height="412" /></p>
	<hr>
	<table class="doc_datatables dt-responsive w-100">
		<thead>
			<tr>
				<th class="label_form">{{ "photo.tab.Photo"|trans([], "validators") }}</th>
				<th class="label_form">{{ "photo.tab.Title"|trans([], "validators") }}</th>
				<th class="label_form">{{ "photo.tab.PublicationDate"|trans([], "validators") }}</th>
			</tr>
		</thead>
		<tbody>
		</tbody>
		<tfoot>
			<tr>
				<th class="label_form">{{ "photo.tab.Photo"|trans([], "validators") }}</th>
				<th class="label_form">{{ "photo.tab.Title"|trans([], "validators") }}</th>
				<th class="label_form">{{ "photo.tab.PublicationDate"|trans([], "validators") }}</th>
			</tr>
		</tfoot>
	</table>
	<br>
	<hr class="hr2">
	{{ "google"|advertisement|raw }}
{% endblock %}