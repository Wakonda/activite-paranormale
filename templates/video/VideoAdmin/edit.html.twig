{% extends "admin/GenericAdmin/edit.html.twig" %}

{% block h2_title %}{{ "admin.index.Video"|trans([], "validators") }}{% endblock %}

{% block delete_admin_route %}{{ path('Video_Admin_Delete', { 'id': entity.id }) }}{% endblock %}
{% block new_admin_route %}{{ path('Video_Admin_New') }}{% endblock %}
{% block index_admin_route %}{{ path('Video_Admin_Index') }}{% endblock %}
{% block update_admin_route %}{{ path('Video_Admin_Update', { 'id': entity.id }) }}{% endblock %}

{% block js_specific %}
	{% import "video/VideoAdmin/macro_video.html.twig" as macro_video %}
	
	<script>
		$(function()
		{
			{{ macro_video.updateListForm(form) }}

			$("#{{ form.vars['id'] }}_existingFile .select_files_colorbox").click(function(e)
			{
				e.preventDefault();
				$('#selectVideoFileModal_{{ form.vars.id }} .modal-body').load('{{ path("Video_Admin_ChooseExistingFile") }}',function(){
					$('#selectVideoFileModal_{{ form.vars.id }}').modal({show:true});
				});
			});

			$("#{{ form.vars['id'] }}_mediaVideo").change(function(){
				$("#{{ form.vars['id'] }}_existingFile").val("");
			});
			
			$("#{{ form.existingFile.vars.id }} .remove_files_colorbox").click(function(e) {
				$("#{{ form.existingFile.vars.id }} .existing_video_colorbox").val("");
				e.preventDefault();
			});
		});
	</script>

	{% import "index/macro/macro_index.html.twig" as macro_index %}
	{{ macro_index.tinymce_init_js() }}
	{{ macro_index.tinymce_admin_js(form.text.vars.id) }}
	{{ macro_index.select2_autocomplete() }}
{% endblock %}

{% block tbody_admin_table %}
	{% include 'video/VideoAdmin/_form.html.twig' %}
{% endblock %}