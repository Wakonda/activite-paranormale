<div style="position:relative;">
	{% if entity is not null %}
		<p><span style="font-weight: bold; font-size: 16px;">{{ entity.title }} (<a href="{{ path('Video_Read', { 'id':entity.id, 'title_slug':entity.getUrlSlug()}) }}" title="More">{{ "photo.slider.More"|trans([], "validators") }}</a>)</span></p>
		<div class="image">
			{% if entity.mediaVideo is not empty %}
				<video class="w-100" controls="controls" id="video_embedded">
					<source src="{{ asset('extended/flash/Video/KAWAplayer_v1/videos/'~entity.mediaVideo) }}" type="video/mp4" />
				</video>
			{% elseif entity.platform == "Twitter" %}
				{{ entity.embeddedCode|raw }}
			{% else %}
				<div class="embed-responsive embed-responsive-16by9">
					{{ entity.embeddedCode|raw }}
				</div>
			{% endif %}
		</div>
	{% endif %}
</div>