{% extends "admin/GenericAdmin/index.html.twig" %}

{% block h2_title %}{{ "admin.index.Biography"|trans([], "validators") }}{% endblock %}

{% block new_admin_route %}{{ path('Biography_Admin_New') }}{% endblock %}
{% block indexdatatables_admin_route %}{{ path('Biography_Admin_IndexDatatables') }}{% endblock %}


{% block js_edit_additional %}
	document.querySelector("select#selected_state").addEventListener("change", (e) => {
		oTable.ajax.url('{{ path('Biography_Admin_IndexDatatables') }}?toComplete=' + e.target.value).load();
	});
{% endblock %}

{% block body_main_additional %}
	<div class="container-fluid mt-3">
		<label>{{ "biography.admin.ToComplete"|trans([], "validators") }}</label>
		<select id="selected_state" class="form-select">
			<option value=""></option>
			<option value="textToComplete">{{ "biography.admin.TextToComplete"|trans([], "validators") }}</option>
			<option value="imageToComplete">{{ "biography.admin.ImageToComplete"|trans([], "validators") }}</option>
			<option value="birthDateToComplete">{{ "biography.admin.BirthDateToComplete"|trans([], "validators") }}</option>
			<option value="deathDateToComplete">{{ "biography.admin.DeathDateToComplete"|trans([], "validators") }}</option>
			<option value="nationalityToComplete">{{ "biography.admin.NationalityToComplete"|trans([], "validators") }}</option>
		</select>
		<hr>
	</div>
{% endblock %}

{% block thead_admin_table %}
	<th class="label_form">Id</th>
	<th class="label_form">{{ "biography.admin.Title"|trans([], "validators") }}</th>
	<th class="label_form">{{ "biography.admin.Language"|trans([], "validators") }}</th>
	<th class="label_form">{{ "admin.index.Action"|trans([], "validators") }}</th>
{% endblock %}

{% block tfoot_admin_table %}
	<th class="label_form">Id</th>
	<th class="label_form">{{ "biography.admin.Title"|trans([], "validators") }}</th>
	<th class="label_form">{{ "biography.admin.Language"|trans([], "validators") }}</th>
	<th class="label_form">{{ "admin.index.Action"|trans([], "validators") }}</th>
{% endblock %}