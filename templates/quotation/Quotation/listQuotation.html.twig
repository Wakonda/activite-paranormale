{% extends "content_layout.html.twig" %}

{% block title %}{{ ("quotation.index." ~ (app.request.get("family")|ucfirst))|trans([], "validators") }}{% endblock %}
{% block h2_title %}<h2><span class="float-left"><img src="{{ asset('extended/photo/avengers-hawkeye-icon.png') }}" width="25" class="mt-1" alt="Werewolf"/></span>{{ ("quotation.index." ~ (app.request.get("family")|ucfirst))|trans([], "validators") }}</h2>{% endblock h2_title %}

{% block header_plus %}
	<script src="{{ asset('extended/js/DataTables/media/js/jquery.dataTables.js') }}"></script>
	<script src="{{ asset('extended/js/DataTables/media/js/dataTables.bootstrap4.min.js') }}"></script>
	<script src="{{ asset('extended/js/DataTables/extensions/Responsive/js/dataTables.responsive.min.js') }}"></script>
	<script src="{{ asset('extended/js/DataTables/extensions/Responsive/js/responsive.bootstrap4.min.js') }}"></script>
	<script>
		$(function ()
		{
			oTable = $('table.doc_datatables').dataTable( {
				"oLanguage": {
					"sUrl": "{{ asset('extended/js/DataTables/language/dataTables.'~app.request.locale~'.txt') }}"
				},
				"bFilter": true,
				"bInfo": true,
				"bLengthChange": true,
				"aaSorting": [[ 0, "desc" ]],
				"sPaginationType": "full_numbers",
				"iDisplayLength": {{ total_line_display }},
				"bProcessing": true,
				"bServerSide": true,
				"responsive": {
					"details": {
						display: $.fn.dataTable.Responsive.display.childRowImmediate,
						type: 'none',
						target: ''
					}
				},
				"sAjaxSource": "{{ path('Quotation_listQuotationDatatables', { family: app.request.get("family") }) }}",
			});
		});
	</script>
	<link rel="stylesheet" href="{{ asset('extended/js/DataTables/media/css/dataTables.bootstrap4.min.css') }}" type="text/css" media="screen" />
	<link rel="stylesheet" href="{{ asset('extended/js/DataTables/extensions/Responsive/css/responsive.bootstrap4.min.css') }}" type="text/css" media="screen" />
{% endblock %}

{% block APBlog_body %}
	<ul id="tab_resources" class="nav nav-pills nav-fill">
		<li class="nav-item mb-3"><span onclick="location.href = '{{ path("Quotation_ListQuotation", { family: constant('App\\Entity\\Quotation::QUOTATION_FAMILY')}) }}';" {{ app.request.get("family") == constant('App\\Entity\\Quotation::QUOTATION_FAMILY') ? 'class="active"' : "" }}>{{ "quotation.index.Quotation"|trans([], "validators") }}</span></li>
		<li class="nav-item mb-3"><span onclick="location.href = '{{ path("Quotation_ListQuotation", { family: constant('App\\Entity\\Quotation::PROVERB_FAMILY')}) }}';" {{ app.request.get("family") == constant('App\\Entity\\Quotation::PROVERB_FAMILY') ? 'class="active"' : "" }}>{{ "quotation.index.Proverb"|trans([], "validators") }}</span></li>
	</ul>

	<p class="image"><img class="image_wrapper mx-auto d-block img-fluid" src="{{ asset('extended/photo/' ~ app.request.get("family") ~ '.jpg') }}" alt="Angel sword" width="550" /></p>
	<hr>
	<table class="doc_datatables dt-responsive w-100">
		{% if app.request.get("family") == constant('App\\Entity\\Quotation::QUOTATION_FAMILY') %}
			<thead>
				<tr>
					<th class="label_form">{{ "quotation.list.Quotation"|trans([], "validators") }}</th>
					<th class="label_form">{{ "quotation.list.Author"|trans([], "validators") }}</th>
				</tr>
			</thead>
			<tbody>

			</tbody>
			<tfoot>
				<tr>
					<th class="label_form">{{ "quotation.list.Proverb"|trans([], "validators") }}</th>
					<th class="label_form">{{ "quotation.list.Country"|trans([], "validators") }}</th>
				</tr>
			</tfoot>
		{% elseif app.request.get("family") == constant('App\\Entity\\Quotation::PROVERB_FAMILY') %}
			<thead>
				<tr>
					<th class="label_form">{{ "quotation.list.Proverb"|trans([], "validators") }}</th>
					<th class="label_form">{{ "quotation.list.Country"|trans([], "validators") }}</th>
				</tr>
			</thead>
			<tbody>

			</tbody>
			<tfoot>
				<tr>
					<th class="label_form">{{ "quotation.list.Quotation"|trans([], "validators") }}</th>
					<th class="label_form">{{ "quotation.list.Author"|trans([], "validators") }}</th>
				</tr>
			</tfoot>
		{% endif %}
	</table>
	<br>
	<br>
	<hr class="hr2">
	{{ "google"|advertisement|raw }}
{% endblock %}