{% extends "admin/GenericAdmin/show.html.twig" %}

{% block h2_title %}{{ "admin.index.Deal"|trans([], "validators") }}{% endblock %}

{% block edit_admin_route %}{{ path('Deal_Admin_Edit', { 'id': entity.id }) }}{% endblock %}
{% block new_admin_route %}{{ path('Deal_Admin_New') }}{% endblock %}
{% block index_admin_route %}{{ path('Deal_Admin_Index') }}{% endblock %}
{% block delete_admin_route %}{{ path('Deal_Admin_Delete', { 'id': entity.id }) }}{% endblock %}

{% block tbody_admin_table %}
	<div class="form-table-cell form-table-cell-head">Id</div>
	<div class="form-table-cell">{{ entity.id }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "deal.admin.Title"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.title }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "deal.admin.Text"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.text|raw }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "deal.admin.Photo"|trans([], "validators") }}</div>
	<div class="form-table-cell"><img src="{{ asset(entity.getAssetImagePath()) }}{{ entity.photo }}"></div>

	<div class="form-table-cell form-table-cell-head">{{ "deal.admin.Link"|trans([], "validators") }}</div>
	<div class="form-table-cell"><a href="{{ entity.link }}">{{ entity.link }}</a></div>

	<div class="form-table-cell form-table-cell-head">{{ "deal.admin.Active"|trans([], "validators") }}</div>
	<div class="form-table-cell">
		{% if entity.active %}
			<span class="text-success"><i class="fas fa-check" aria-hidden="true"></i></span>
		{% else %}
			<span class="text-danger"><i class="fas fa-times" aria-hidden="true"></i></span>
		{% endif %}
	</div>

	<div class="form-table-cell form-table-cell-head">{{ "deal.admin.Language"|trans([], "validators") }}</div>
	<div class="form-table-cell"><img src="{{ asset(entity.language.getAssetImagePath()) }}{{ entity.language.logo }}" alt="" width="20" height="13"></div>
{% endblock %}

{% block data_bottom %}
	{{ render(controller('App\\Controller\\AdminController::internationalizationSelectGenericAction', {entity: entity, route: "Deal_Admin_Internationalization", "showRoute": "Deal_Admin_Show", "editRoute": "Deal_Admin_Edit"})) }}
{% endblock %}