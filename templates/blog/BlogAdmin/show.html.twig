{% extends "admin/GenericAdmin/show.html.twig" %}

{% block h2_title %}{{ "admin.index.Blog"|trans([], "validators") }}{% endblock %}

{% block edit_admin_route %}{{ path('Blog_Admin_Edit', { 'id': entity.id }) }}{% endblock %}
{% block new_admin_route %}{{ path('Blog_Admin_New') }}{% endblock %}
{% block index_admin_route %}{{ path('Blog_Admin_Index') }}{% endblock %}
{% block delete_admin_route %}{{ path('Blog_Admin_Delete', { 'id': entity.id }) }}{% endblock %}

{% block tbody_admin_table %}
	<div class="form-table-cell form-table-cell-head">Id</div>
	<div class="form-table-cell">{{ entity.id }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "blog.admin.Title"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.title }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "blog.admin.Banner"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.banner|imgsize(200, entity.getAssetImagePath(), true, {"class": "mx-auto d-block img-fluid"})|raw }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "blog.admin.Link"|trans([], "validators") }}</div>
	<div class="form-table-cell"><a href="{{ entity.rss }}" alt="">{{ entity.link }}</a></div>

	<div class="form-table-cell form-table-cell-head">{{ "blog.admin.Rss"|trans([], "validators") }}</div>
	<div class="form-table-cell"><a href="{{ entity.rss }}" alt="">{{ entity.rss }}</a></div>

	<div class="form-table-cell form-table-cell-head">{{ "blog.admin.Text"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.text|raw }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "blog.admin.Language"|trans([], "validators") }}</div>
	<div class="form-table-cell"><img src="{{ asset(entity.language.getAssetImagePath()) }}{{ entity.language.logo }}" alt="" width="20" height="13" /></div>

	<div class="form-table-cell form-table-cell-head">{{ "blog.admin.LanguageOfBlog"|trans([], "validators") }}</div>
	<div class="form-table-cell"><img src="{{ asset(entity.language.getAssetImagePath()) }}{{ entity.languageOfBlog.logo }}" alt="" width="20" height="13" /></div>

	<div class="form-table-cell form-table-cell-head">{{ "blog.admin.category"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.category }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "blog.admin.Active"|trans([], "validators") }}</div>
	<div class="form-table-cell">
		{% if entity.active %}
			<span class="text-success"><i class="fas fa-check" aria-hidden="true"></i></span>
		{% else %}
			<span class="text-danger"><i class="fas fa-times" aria-hidden="true"></i></span>
		{% endif %}
	</div>
{% endblock %}