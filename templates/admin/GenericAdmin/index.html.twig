{% extends "admin/admin.html.twig" %}

{% block h2_title %}{% endblock %}

{% block style_edit %}
	<link rel="stylesheet" href="{{ asset('extended/js/DataTables/media/css/dataTables.bootstrap4.min.css') }}" type="text/css" media="screen" />
	<link rel="stylesheet" href="{{ asset('extended/js/DataTables/extensions/Responsive/css/responsive.bootstrap4.min.css') }}" type="text/css" media="screen" />
{% endblock %}

{% block new_entry %}
	<li class="nav-item"><a class="nav-link" href="{{ path('Admin_Index') }}" title="Index"><i class="fas fa-home" aria-hidden="true"></i> Index</a></li>
	<li class="nav-item"><a class="nav-link" href="{% block new_admin_route %}{% endblock %}" title="Create"><i class="fas fa-pencil-alt" aria-hidden="true"></i> {{ "admin.general.Create"|trans([], "validators") }}</a></li>
{% endblock %}

{% block body_main %}
	{% block body_main_additional %}{% endblock %}
	
	<table class="table table-striped table-bordered dataTable index_admin dt-responsive w-100">
		<thead>
			{% block thead_admin_table %}{% endblock %}
		</thead>
		<tbody>

		</tbody>
		<tfoot>
			{% block tfoot_admin_table %}{% endblock %}
		</tfoot>
	</table>
	<div class="clearfix"></div>
	
	{% block body_main_additional_bottom %}{% endblock %}
{% endblock %}

{% block js_edit %}
	<script src="{{ asset('extended/js/DataTables/media/js/jquery.dataTables.js') }}" defer></script>
	<script src="{{ asset('extended/js/DataTables/media/js/dataTables.bootstrap4.min.js') }}" defer></script>
	<script src="{{ asset('extended/js/DataTables/extensions/Responsive/js/dataTables.responsive.min.js') }}" defer></script>
	<script src="{{ asset('extended/js/DataTables/extensions/Responsive/js/responsive.bootstrap4.min.js') }}" defer></script>
	<script defer>
		$(function ()
		{
			oTable = $('table.index_admin').dataTable( {
				"oLanguage": {
					"sUrl": "{{ asset('extended/js/DataTables/language/dataTables.'~app.request.locale~'.txt') }}"
				},
				"bFilter": true,
				"bInfo": true,
				"bLengthChange": true,
				"aaSorting": [[ 0, "desc" ]],
				"sPaginationType": "full_numbers",
				"iDisplayLength": {{ total_line_display }},
				"bProcessing": true,
				"bServerSide": true,
				"sAjaxSource": "{% block indexdatatables_admin_route %}{% endblock %}",
				{% block datatables_additional_options %}{% endblock %}
			});
		});
		{% block js_edit_additional %}{% endblock %}
	</script>
{% endblock %}