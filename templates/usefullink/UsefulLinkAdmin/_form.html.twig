<script>
	document.getElementById("{{ form.category.vars.id }}").addEventListener("change", (e) => {
		categoryContainer(e.target.value);
	});
	
	categoryContainer(document.getElementById("{{ form.category.vars.id }}").value);
	
	function categoryContainer(value) {
		document.querySelectorAll(".linkContainer").forEach(el => el.style.display = "none");
		document.querySelectorAll(".photoContainer").forEach(el => el.style.display = "none");
		document.querySelectorAll(".websiteContainer").forEach(el => el.style.display = "none");
		document.querySelectorAll(".tagsContainer").forEach(el => el.style.display = "none");

		if ("{{ constant('App\\Entity\\UsefulLink::TECHNICAL_FAMILY') }}" == value)
			document.querySelectorAll(".websiteContainer").forEach(el => el.style.display = "block");

		if ("{{ constant('App\\Entity\\UsefulLink::DEVELOPMENT_FAMILY') }}" == value)
			document.querySelectorAll(".tagsContainer").forEach(el => el.style.display = "block");

		if ("{{ constant('App\\Entity\\UsefulLink::DEVELOPMENT_FAMILY') }}" == value || "{{ constant('App\\Entity\\UsefulLink::USEFULLINK_FAMILY') }}" == value || "{{ constant('App\\Entity\\UsefulLink::TOOL_FAMILY') }}" == value) {
			document.querySelectorAll(".linkContainer").forEach(el => el.style.display = "block");
			document.querySelectorAll(".photoContainer").forEach(el => el.style.display = "block");
		}
	}
</script>