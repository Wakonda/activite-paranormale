{% extends "admin/GenericAdmin/show.html.twig" %}

{% block h2_title %}{{ "admin.index.Logo"|trans([], "validators") }}{% endblock %}

{% block edit_admin_route %}{{ path('Logo_Admin_Edit', { 'id': entity.id }) }}{% endblock %}
{% block new_admin_route %}{{ path('Logo_Admin_New') }}{% endblock %}
{% block index_admin_route %}{{ path('Logo_Admin_Index') }}{% endblock %}
{% block delete_admin_route %}{{ path('Logo_Admin_Delete', { 'id': entity.id }) }}{% endblock %}
{% block restore_admin_route%}{{ path('Logo_Admin_Restore', { 'id': entity.id }) }}{% endblock %}

{% block tbody_admin_table %}
	<div class="form-table-cell form-table-cell-head">Id</div>
	<div class="form-table-cell">{{ entity.id }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "logo.admin.Title"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.title }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "logo.admin.Text"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.text|raw }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "logo.admin.Alt"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.alt }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "logo.admin.PublishedAt"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.publishedAt|dodate(false, app.request.locale) }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "logo.admin.Language"|trans([], "validators") }}</div>
	<div class="form-table-cell"><img src="{{ asset(entity.language.getAssetImagePath()) }}{{ entity.language.logo }}" alt="" width="20" height="13" /></div>

	<div class="form-table-cell form-table-cell-head">{{ "logo.admin.Folder"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.folder }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "logo.admin.Image"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.image|imgsize(50, entity.getAssetImagePath()~entity.folder~'/', true, {"class": "mx-auto d-block img-fluid"})|raw }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "logo.admin.IsActive"|trans([], "validators") }}</div>
	<div class="form-table-cell">
		{% if entity.isActive %}
			<span class="text-success"><i class="fas fa-check" aria-hidden="true"></i></span>
		{% else %}
			<span class="text-danger"><i class="fas fa-times" aria-hidden="true"></i></span>
		{% endif %}
	</div>
{% endblock %}