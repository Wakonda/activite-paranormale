{% extends "content_layout.html.twig" %}

{% block title %}{{ entity.title }}{% endblock %}
{% block h2_title %}<h2><span class="float-start"><img src="{{ asset('extended/photo/flying-saucer-ufo-photo.png') }}" width="25" class="mt-1" alt="Flying Saucer"/></span>{{ entity.title }}</h2>{% endblock h2_title %}

{% block APBlog_body %}
	<p class="image"><img class="image_wrapper mx-auto d-block img-fluid" src="{{ asset('extended/photo/licence-show-by.webp') }}" alt="Zombie playing soccer" width="550"></p>
	<hr>
	<h3>{{ entity.title }}</h3>
	<p>{{ entity.text|raw }}</p>
	<p class="text-center"><a href="{{ entity.link }}" target="_blank"><img class="image" src="{{ asset('extended/photo/licence/'~entity.logo) }}" alt="{{ entity.title }}"></a></p>
{% endblock %}