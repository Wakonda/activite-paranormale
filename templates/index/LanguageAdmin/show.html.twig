{% extends "admin/GenericAdmin/show.html.twig" %}

{% block h2_title %}{{ "admin.index.Language"|trans([], "validators") }}{% endblock %}

{% block edit_admin_route %}{{ path('Language_Admin_Edit', { 'id': entity.id }) }}{% endblock %}
{% block new_admin_route %}{{ path('Language_Admin_New') }}{% endblock %}
{% block index_admin_route %}{{ path('Language_Admin_Index') }}{% endblock %}
{% block delete_admin_route %}{{ path('Language_Admin_Delete', { 'id': entity.id }) }}{% endblock %}

{% block tbody_admin_table %}
	<div class="form-table-cell form-table-cell-head">Id</div>
	<div class="form-table-cell">{{ entity.id }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "language.admin.Language"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.title }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "language.admin.Abbreviation"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.abbreviation }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "language.admin.Flag"|trans([], "validators") }}</div>
	<div class="form-table-cell"><img src="{{ asset(entity.getAssetImagePath()) }}{{ entity.logo }}" alt="" width="20" height="13"></div>

	<div class="form-table-cell form-table-cell-head">{{ "language.admin.Direction"|trans([], "validators") }}</div>
	<div class="form-table-cell">
		{% if entity.direction == "rtl" %}
			{{ "language.admin.RightToLeft"|trans([], "validators") }}
		{% else %}
			{{ "language.admin.LeftToRight"|trans([], "validators") }}
		{% endif %}
	</div>
{% endblock %}