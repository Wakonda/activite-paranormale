{% extends "admin/GenericAdmin/show.html.twig" %}

{% block h2_title %}{{ "admin.index.State"|trans([], "validators") }}{% endblock %}

{% block edit_admin_route %}{{ path('State_Admin_Edit', { 'id': entity.id }) }}{% endblock %}
{% block new_admin_route %}{{ path('State_Admin_New') }}{% endblock %}
{% block index_admin_route %}{{ path('State_Admin_Index') }}{% endblock %}
{% block delete_admin_route %}{{ path('State_Admin_Delete', { 'id': entity.id }) }}{% endblock %}

{% block tbody_admin_table %}
	<div class="form-table-cell form-table-cell-head">Id</div>
	<div class="form-table-cell">{{ entity.id }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "state.admin.Title"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.title }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "state.admin.Text"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.text }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "state.admin.DisplayState"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.displayState }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "state.admin.InternationalName"|trans([], "validators") }}</div>
	<div class="form-table-cell">{{ entity.internationalName }}</div>

	<div class="form-table-cell form-table-cell-head">{{ "state.admin.Language"|trans([], "validators") }}</div>
	<div class="form-table-cell"><img src="{{ asset(entity.language.getAssetImagePath()) }}{{ entity.language.logo }}" alt="" width="20" height="13" /></div>
{% endblock %}

{% block data_bottom %}
	{{ render(controller('App\\Controller\\AdminController::internationalizationSelectGeneric', {entity: entity, route: "State_Admin_Internationalization", "showRoute": "State_Admin_Show", "editRoute": "State_Admin_Edit"})) }}
{% endblock %}