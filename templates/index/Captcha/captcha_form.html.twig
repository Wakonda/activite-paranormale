	<div class="form-table-cell form-table-cell-head">
		{{ form_label(form.captcha, "captcha.form.RecopyCaptcha"|trans([], "validators")) }}
	</div>

	<div class="form-table-cell">
		{{ form_errors(form.captcha) }}{{ form_widget(form.captcha, {'attr':{'class' : 'form-control'}}) }}
